$orange=#EA5404
*
  outline none
body
  margin 0
  padding 0
  background-color #efefef
  font-family SimHei
.header
  width 100%
  height 35px
  background-color #FFFFFF
  line-height 35px
  text-align center
  .icon-right
    width 32px
    height 32px
    background url('../../image/person/nav_set_icon@2x.png') no-repeat center 10px
    background-size 16px 16px
    line-height 20px
    position absolute
    top 0px
    right 10px
    display inline-block
.login_box
  position relative
  height 95px
  display flex
  background-color #FFFFFF
  margin-top 10px
  padding 0 15px
  .login_img
    width 64px
    height 64px
    background url('../../image/person/pic.jpg') no-repeat center
    background-size cover
    position absolute
    top 50%
    left 15px
    margin-top -30px
    border-radius 50%
    &:after
      content ''
      width 36px
      height 36px
      background url('../../image/person/log-in_member_icon@2x.png') no-repeat center
      background-size 18px
      position absolute
      bottom -10px
      right -10px

  .login_con
    flex 1
    padding-left 80px
    position absolute
    top 10px
  &:after
    content ''
    position absolute
    top 50%
    right 15px
    display block
    margin-top -18px
    width 20px
    height 36px
    background url('../../image/person/log in_right_icon@2x.png') no-repeat center
    background-size 50%
  .login_top
    font-size 20px
  .login_bottom
    position absolute
    top -10px
    font-size 0.8rem
    color #646464
    position relative
    &:after
        content ''
        width 22px
        height 24px
        background url('../../image/person/log-in_edit_icon@2x.png') no-repeat center
        background-size 12px 12px
        position absolute
        top -5px
.s_box
  position relative
  height 40px
  background-color #FFFFFF
  display flex
  &:before
    content ''
    width 100%
    position absolute
    border 1px solid #EDEEF0
    top 0px


  .s_left
  .s_right
    display inline-block
    flex 1
    text-align center
    line-height 40px
  &:after
    content ''
    position: absolute
    top 2px
    right 50%
    display block
    width 1px
    height 35px
    background-color #CCCCCC
    z-index 5
  & span
    padding 0 2px
.link_cell
  background url('../../image/person/content_list_icon01@2x.png') no-repeat left 15px center
.link_cell1
  background url('../../image/person/content_list_icon02@2x.png') no-repeat left 15px center
.link_cell2
  background url('../../image/person/content_list_icon03@2x.png') no-repeat left 15px center
.link_cell3
  background url('../../image/person/content_list_icon04@2x.png') no-repeat left 15px center
.link_cell4
  background url('../../image/person/content_list_icon05@2x.png') no-repeat left 15px center
.link_cell,.link_cell1,.link_cell2,.link_cell3,.link_cell4
  position relative
  height 50px
  background-size 20px
  background-color #FFFFFF
  margin-top 10px
  padding-left 45px
.link_cell,.link_cell1,.link_cell2,.link_cell3,.link_cell4
  :after
    content ''
    position absolute
    top 50%
    right 15px
    margin-top -15px
    width 16px
    height 30px
    background url('../../image/person/content_list_right_icon@2x.png') no-repeat  right center
    background-size 50%
  .link-info
    line-height 50px
footer
  position fixed
  padding-top 10px
  right 0
  left 0
  bottom 0
  background #fff
  ul
    list-style none
    padding 0
    li
      float left
      width 16%
      height 40px
      padding 2%
      color #999
      text-align center
      padding-top 30px
      &:hover
        color #ea5404
      &.f1
        background url("../../image/index/bottom_nor_icon04@2x.png") no-repeat center 0
        background-size 22px 22px

      &.f2
        background url("../../image/index/bottom_nor_icon03@2x.png") no-repeat center 0
        background-size 22px 22px
      &.f3
        background url("../../image/index/bottom_icon05@2x.png") no-repeat center 0
        background-size 44px 44px
      &.f4
        background url("../../image/index/bottom_nor_icon02@2x.png") no-repeat center 0
        background-size 22px 22px

        position relative
        &:after
          content '3'
          width 15px
          height 15px
          display block
          position absolute
          right 20%
          top 0%
          background #ea5404
          color #ffffff
          border-radius 50%
      &.f5
        background url("../../image/index/bottom_press_icon01@2x.png") no-repeat center 0
        background-size 22px 22px
        color #ea5404

.publish
  position fixed
  top 0
  bottom 0
  width 100%
  z-index 10
  display none
  background rgba(0,0,0,0.9)
  .con
    width 100%
    padding 0 16%
    position fixed
    bottom 110px
    height 120px
    .left,.right
      width 95px
      height 95px
      border-radius 50%
      float left
      background url("../../public/image/index/publish_btn02@2x.png") no-repeat center
      background-size 95px 95px
      position relative
      span
        display block
        width 95px
        text-align center
        position absolute
        bottom 0px
        color: #ffffff
      &.right
        background url("../../public/image/index/publish_btn01@2x.png") no-repeat center
        background-size 95px 95px
        margin-left 16%
  .bottom
    height 60px
    background url("../../public/image/index/publish_close_icon@2x.png") no-repeat center #242221
    background-size 16px 16px
    position fixed
    bottom 0
    width 100%

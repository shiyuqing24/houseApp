body
  margin 0
  padding 0
  background #efefef
  font-size 14px
ul
  list-style none
  padding 0
  margin 0
header
  height 30px
  padding 8px
  background #ffffff
  font-size 16px
  ul
    border 1px solid #ea5404
    width 82%
    height 30px
    margin 0 auto
    border-radius 5px
    color #ea5404
    li
      float left
      height 30px
      line-height 30px
      width 33%
      text-align center
      &:nth-child(2)
        border-right 1px solid #ea5404
      &:nth-child(3)
        width 33.6%
      &.active
        color #ffffff
        background #ea5404

.info
  padding 3%
  width 94%
  position absolute
  top 46px
  bottom 70px
  overflow auto
  overflow-x hidden
  .list
    width 100%
    padding 10px 0
    background #ffffff
    border-radius 5px
    position relative
    margin-bottom 10px
    color #646464
    p
      display block
      padding 0 20px
      text-indent 2em
      line-height 18px
    .list-title
      font-size 16px
      font-weight 500
      padding 10px 0
      padding-left 20px
      color #323232
      width 94%
      margin-bottom 10px
      border-bottom 1px solid #d6d7dc
    .date
      font-size 12px
      color #999
      padding 0 20px
      position absolute
      right 0
      bottom 6px
.adv
  padding 3%
  width 94%
  display none
  position absolute
  top 46px
  bottom 70px
  overflow auto
  overflow-x hidden
  .list
    width 100%
    padding 10px 0
    background #ffffff
    border-radius 5px
    position relative
    color #646464
    margin-bottom 10px
    p
      display block
      padding 0 20px
      text-indent 2em
    .add
      display block
      padding 0 20px
    .list-title
      font-size 16px
      font-weight 600
      padding 10px 0
      padding-left 20px
      color #323232
      width 94%
      margin-bottom 10px
      border-bottom 1px solid #d6d7dc
      .date
        font-size 12px
        color #999
        padding 0 20px
        font-weight 400
        position absolute
        right 10px
        top 20px
.demand
  padding 3%
  display none
  position absolute
  top 46px
  bottom 70px
  overflow auto
  overflow-x hidden
  .list
    padding 10px
    background #ffffff
    margin-bottom 10px
    border-radius 5px
    color #646464
    .list-title
      font-size 16px
      font-weight 600
      color #323232
      padding 10px 0
      padding-left 20px
      width 94%
      margin-bottom 10px
      background url("../../public/image/msg/content_list_border.9@2x.png") no-repeat 0 bottom
      .list-right
        float right
        color #ffffff
        background #15b755
        border-radius 5px
        padding 2px 5px
        font-size 12px
    .botton
      text-align center
      position relative
      font-size 12px
      bottom 10px
      button
        background #efeff4
        color #646464
        padding 5px
        border-radius 5px
        border none
      span
        display block
        height 26px
        line-height 26px
        position absolute
        right 0
        bottom 0
    &:nth-child(2)
      .list-right
        background #0193e6
    &:nth-child(3)
      .list-right
        background #97b715
    &:nth-child(4)
      .list-right
        background #ea5404
footer
  position fixed
  padding-top 10px
  right 0
  left 0
  bottom 0
  background #fff
  ul
    list-style none
    padding 0
    li
      float left
      width 16%
      height 20px
      padding 2%
      color #999
      text-align center
      padding-top 30px
      &:hover
        color #ea5404
      &.f1
        background url("../../image/index/bottom_nor_icon04@2x.png") no-repeat center 0
        background-size 22px 22px
      &.f2
        background url("../../image/index/bottom_nor_icon03@2x.png") no-repeat center 0
        background-size 22px 22px
      &.f3
        background url("../../image/index/bottom_icon05@2x.png") no-repeat center 0
        background-size 44px 44px
      &.f4
        background url("../../image/index/bottom_press_icon02@2x.png") no-repeat center 0
        background-size 22px 22px
        color #ea5404
        position relative
        &:after
          content '3'
          width 15px
          height 15px
          display block
          position absolute
          right 20%
          top 0%
          background #ea5404
          color #ffffff
          border-radius 50%
      &.f5
        background url("../../image/index/bottom_nor_icon001@2x.png") no-repeat center 0
        background-size 22px 22px

.publish
  position fixed
  top 0
  bottom 0
  width 100%
  z-index 10
  display none
  background rgba(0,0,0,0.9)
  .con
    width 100%
    padding 0 16%
    position fixed
    bottom 110px
    height 120px
    .left,.right
      width 95px
      height 95px
      border-radius 50%
      float left
      background url("../../public/image/index/publish_btn022@2x.png") no-repeat center
      background-size 95px 95px
      position relative
      span
        display block
        width 95px
        text-align center
        position absolute
        bottom -25px
        color: #ffffff
      &.right
        background url("../../public/image/index/publish_btn011@2x.png") no-repeat center
        background-size 95px 95px
        margin-left 16%
  .bottom
    height 60px
    background url("../../public/image/index/publish_close_icon@2xx.png") no-repeat center #242221
    background-size 16px 16px
    position fixed
    bottom 0
    width 100%
$orange=#ED6928
body
  background-color #efefef
  font-family SimHei
.tab_box
    height 32px
    padding 9px 0
    background-color #FFFFFF
    .tab_bar
      display flex
      width 80%
      height 30px
      margin 0 auto
      padding 0
      list-style none
      border-radius 5px
      border 1px solid $orange
      clolr $orange
      .tab_bar-cell
        position relative
        flex 1
        line-height 30px
        text-align center
        &:after
          content ''
          position absolute
          top 0
          right 0
          display block
          width 1px
          height 30px
          background-color $orange
        &:last-child:after
          content ''
          display none
        &.active
          background-color $orange
          color #fff
.demand_cells
  padding 15px
  .demand_cell
    width 100%
    min-height 100px
    border-radius 5px
    box-shadow 0 0 1px 1px #e0e0e0
    line-height 30px
    background #FFFFFF
    margin-bottom  10px
    .demand-title
      display flex
      height 30px
      padding 0 10px
      border-bottom 1px dashed #CCCCCC
      .d-t-name
        flex 1
      .d-t-tag,.d-t-tag1,.d-t-tag2,.d-t-tag3
        display inline-block
        width 50px
        height 16px
        margin 7px 0
        padding 2px 0
        border-radius 5px
        color #FFFFFF
        line-height 16px
        text-align center
        font-style normal
        font-size 0.8rem
      .d-t-tag
        background-color #15B755
      .d-t-tag1
        background-color #0193E6
      .d-t-tag2
        background-color #97B715
      .d-t-tag3
        background-color #EA5404

    .demand-info
      margin 0
      padding 10px
      line-height 1.2rem
      font-size 0.8rem
    .demand-footer
      display flex
      height 30px
      padding 10px
      line-height 30px
      .btn-detail
        width 100px
        height 30px
        border-radius 5px
        border 1px solid #EFEFF4
        color #999988
        text-align center
        font-size 1.0rem
      .text-time
        flex 1
        font-size 0.8rem
        font-style normal
        text-align right
footer.bottom-list
  width 100%
  padding 2% 0
  border-top 1px solid #d6d7dc
  background-color #FFFFFF
  position fixed
  bottom 0
  display flex
  .bottom-column
    text-align center
    flex 1
    img
      width 22px
    img.add-img
      width 42px
    p
      margin 0
      font-size 0.8rem
      color #b4b4b4
    p.active
      color $orange
      position relative


























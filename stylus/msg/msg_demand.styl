$orange=#ED6928
body
  background-color #efefef
  font-family SimHei
.tab_box
    height 32px
    padding 9px 0
    background-color #FFFFFF
    .tab_bar
      display flex
      width 80%
      height 30px
      margin 0 auto
      padding 0
      list-style none
      border-radius 5px
      border 1px solid $orange
      clolr $orange
      .tab_bar-cell
        position relative
        flex 1
        line-height 30px
        text-align center
        &:after
          content ''
          position absolute
          top 0
          right 0
          display block
          width 1px
          height 30px
          background-color $orange
        &:last-child:after
          content ''
          display none
        &.active
          background-color $orange
          color #fff
.demand_cells
  padding 15px
  .demand_cell
    width 100%
    min-height 100px
    border-radius 5px
    box-shadow 0 0 1px 1px #e0e0e0
    line-height 30px
    background #FFFFFF
    margin-bottom  10px
    .demand-title
      display flex
      height 30px
      padding 0 10px
      border-bottom 1px dashed #CCCCCC
      .d-t-name
        flex 1
      .d-t-tag,.d-t-tag1,.d-t-tag2,.d-t-tag3
        display inline-block
        width 50px
        height 16px
        margin 7px 0
        padding 2px 0
        border-radius 5px
        color #FFFFFF
        line-height 16px
        text-align center
        font-style normal
        font-size 0.8rem
      .d-t-tag
        background-color #15B755
      .d-t-tag1
        background-color #0193E6
      .d-t-tag2
        background-color #97B715
      .d-t-tag3
        background-color #EA5404

    .demand-info
      margin 0
      padding 10px
      line-height 1.2rem
      font-size 0.8rem
    .demand-footer
      display flex
      height 30px
      padding 10px
      line-height 30px
      .btn-detail
        width 100px
        height 30px
        border-radius 5px
        border 1px solid #EFEFF4
        color #999988
        text-align center
        font-size 1.0rem
      .text-time
        flex 1
        font-size 0.8rem
        font-style normal
        text-align right
footer
  position fixed
  padding-top 10px
  right 0
  left 0
  bottom 0
  background #fff
  ul
    list-style none
    padding 0
    li
      float left
      width 16%
      height 40px
      padding 2%
      color #999
      text-align center
      padding-top 30px
      &:hover
        color #ea5404
      &.f1
        background url("../../image/index/bottom_nor_icon04@2x.png") no-repeat center 0
        background-size 22px 22px

      &.f2
        background url("../../image/index/bottom_nor_icon03@2x.png") no-repeat center 0
        background-size 22px 22px
      &.f3
        background url("../../image/index/bottom_icon05@2x.png") no-repeat center 0
        background-size 44px 44px
      &.f4
        background url("../../image/index/bottom_press_icon02@2x.png") no-repeat center 0
        background-size 22px 22px
        color #ea5404
        position relative
        &:after
          content '3'
          width 15px
          height 15px
          display block
          position absolute
          right 20%
          top 0%
          background #ea5404
          color #ffffff
          border-radius 50%
      &.f5
        background url("../../image/index/bottom_nor_icon001@2x.png") no-repeat center 0
        background-size 22px 22px

.publish
  position fixed
  top 0
  bottom 0
  width 100%
  z-index 10
  display none
  background rgba(0,0,0,0.9)
  .con
    width 100%
    padding 0 16%
    position fixed
    bottom 110px
    height 120px
    .left,.right
      width 95px
      height 95px
      border-radius 50%
      float left
      background url("../../public/image/index/publish_btn02@2x.png") no-repeat center
      background-size 95px 95px
      position relative
      span
        display block
        width 95px
        text-align center
        position absolute
        bottom 0px
        color: #ffffff
      &.right
        background url("../../public/image/index/publish_btn01@2x.png") no-repeat center
        background-size 95px 95px
        margin-left 16%
  .bottom
    height 60px
    background url("../../public/image/index/publish_close_icon@2x.png") no-repeat center #242221
    background-size 16px 16px
    position fixed
    bottom 0
    width 100%




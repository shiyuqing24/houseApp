$orange=#ed692B
body
  background-color #efefef
  font-family SimHei
.tab_box
  height 32px
  padding 9px 0
  background-color #FFFFFF
  .tab_bar
    display flex
    width 80%
    height 30px
    margin 0 auto
    padding 0px
    list-style none
    border 1px solid $orange
    border-radius 5px
    color $orange
    .tab_bar-cell
      position relative
      flex 1
      line-height 30px
      text-align center
      &:after
        content ''
        position absolute
        top 0
        right 0
        width 1px
        height 30px
        background-color $orange
      &:last-child:after
        display none
      &.active
        background-color $orange
        color #FFFFFF
.demand_cells
  padding 10px
  .demand_cell
    width 100%
    min-height 80px
    border-radius 5px
    box-shadow 0 0 1px 1px #e0e0e0
    line-height 30px
    background-color #fff
    .demand-title
      display flex
      height 50px
      padding 0 10px
      border-bottom 1px solid #cecece
      line-height 50px
      font-size 1.4em
      .d-t-name
        flex 1
      .text-time
        font-style normal
        position absolute
        right 30px
        font-size 12px
        color #646464
    .demand-info
      margin 0
      padding 10px
      line-height 1.2em
      text-indent 1em
      color #A2A2A2
    .demand-detail
      margin 0
      padding 10px
      line-height 1.2em
      color #A2A2A2
footer
  position fixed
  padding-top 10px
  right 0
  left 0
  bottom 0
  background #fff
  ul
    list-style none
    padding 0
    li
      float left
      width 16%
      height 40px
      padding 2%
      color #999
      text-align center
      padding-top 30px
      &:hover
        color #ea5404
      &.f1
        background url("../../image/index/bottom_nor_icon04@2x.png") no-repeat center 0
        background-size 22px 22px

      &.f2
        background url("../../image/index/bottom_nor_icon03@2x.png") no-repeat center 0
        background-size 22px 22px
      &.f3
        background url("../../image/index/bottom_icon05@2x.png") no-repeat center 0
        background-size 44px 44px
      &.f4
        background url("../../image/index/bottom_press_icon02@2x.png") no-repeat center 0
        background-size 22px 22px
        color #ea5404
        position relative
        &:after
          content '3'
          width 15px
          height 15px
          display block
          position absolute
          right 20%
          top 0%
          background #ea5404
          color #ffffff
          border-radius 50%
      &.f5
        background url("../../image/index/bottom_nor_icon001@2x.png") no-repeat center 0
        background-size 22px 22px

.publish
  position fixed
  top 0
  bottom 0
  width 100%
  z-index 10
  display none
  background rgba(0,0,0,0.9)
  .con
    width 100%
    padding 0 16%
    position fixed
    bottom 110px
    height 120px
    .left,.right
      width 95px
      height 95px
      border-radius 50%
      float left
      background url("../../public/image/index/publish_btn02@2x.png") no-repeat center
      background-size 95px 95px
      position relative
      span
        display block
        width 95px
        text-align center
        position absolute
        bottom 0px
        color: #ffffff
      &.right
        background url("../../public/image/index/publish_btn01@2x.png") no-repeat center
        background-size 95px 95px
        margin-left 16%
  .bottom
    height 60px
    background url("../../public/image/index/publish_close_icon@2x.png") no-repeat center #242221
    background-size 16px 16px
    position fixed
    bottom 0
    width 100%




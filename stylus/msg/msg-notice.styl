$orange=#ed692B
body
  background-color #efefef
  font-family SimHei
.tab_box
  height 32px
  padding 9px 0
  background-color #FFFFFF
  .tab_bar
    display flex
    width 80%
    height 30px
    margin 0 auto
    padding 0px
    list-style none
    border 1px solid $orange
    border-radius 5px
    color $orange
    .tab_bar-cell
      position relative
      flex 1
      line-height 30px
      text-align center
      &:after
        content ''
        position absolute
        top 0
        right 0
        width 1px
        height 30px
        background-color $orange
      &:last-child:after
        display none
      &.active
        background-color $orange
        color #FFFFFF
.demand_cells
  padding 10px
  .demand_cell
    width 100%
    min-height 80px
    border-radius 5px
    box-shadow 0 0 1px 1px #e0e0e0
    line-height 30px
    background-color #fff
    .demand-title
      display flex
      height 50px
      padding 0 10px
      border-bottom 1px solid #cecece
      line-height 50px
      font-size 1.4em
      .d-t-name
        flex 1
      .text-time
        font-style normal
        position absolute
        right 30px
        font-size 12px
        color #646464
    .demand-info
      margin 0
      padding 10px
      line-height 1.2em
      text-indent 1em
      color #A2A2A2
    .demand-detail
      margin 0
      padding 10px
      line-height 1.2em
      color #A2A2A2
footer.bottom-list
  width 100%
  padding 2% 0
  border-top 1px solid #d6d7dc
  background-color #FFFFFF
  position fixed
  bottom 0
  display flex
  .bottom-column
    text-align center
    flex 1
    img
      width 22px
    img.add-img
      width 42px
    p
      margin 0
      font-size 0.8rem
      color #b4b4b4
    p.active
      color $orange
      position relative
      &:after
        content '3'
        color #FFFFFF
        width 15px
        height 15px
        border-radius 50%
        text-align center
        line-height 15px
        background-color #ec461f
        position absolute
        display block
        top -27px
        left 42px











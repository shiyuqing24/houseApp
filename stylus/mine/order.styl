body
  margin 0
  padding 0
  background #efefef
  font-size 14px

header
  height 35px
  background #ffffff
  line-height 35px
  .icon-back
    position absolute
    top 2px
    left 5px
    display inline-block
    width 30px
    height 30px
    background url("../../image/person/nav_icon_back@2x.png") no-repeat center
    background-size 12px 18px
  .header_title
    display inline-block
    width 100%
    text-align center
    font-size 20px
.list
  height 115px
  padding 10px
  background #ffffff
  margin-top 10px
  position relative
  .icon-back
    display block
    width 34%
    margin-right 6%
    height 110px
    float left
    background url("../../image/index/content_img_list@2x.png") no-repeat center
    background-size 130px 110px
  .info
    float left
    width 53%
    height 100px
    line-height 25px
    font-size 12px
    .title
      display block
      font-size 18px
      font-weight bold
      margin-top 0
      .status
        font-size 12px
        font-weight 400
        float right
    .add
      font-size 16px
    button
      color tomato
      background #ffffff
      border 1px solid tomato
      border-radius 5px
    .info-btn
      display inline-block
      .price
        color tomato
        font-size 16px
      .date
        display inline-block
        position absolute
        right 5px
  .del
    display none
    width 20%
    line-height 115px
    text-align center
    color tomato
    position absolute
    right 0
    top 0
    bottom 0
    background #efeff4

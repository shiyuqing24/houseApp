body
  margin 0
  padding 0
  background #efefef
  font-size 14px

header
  height 35px
  background #ffffff
  line-height 35px
  .icon-back
    position absolute
    top 2px
    left 5px
    display inline-block
    width 30px
    height 30px
    background url("../../image/person/nav_icon_back@2x.png") no-repeat center
    background-size 12px 18px
  .header_title
    display inline-block
    width 100%
    text-align center
    font-size 20px
article
  margin-top 10px
  background #ffffff
  padding 10px
  color #999
  table
    width 100%
    .icon-logo
      display inline-block
      background url("../../image/person/pic.jpg") no-repeat center
      width 30px
      height 30px
      background-size 30px 30px
      border-radius 50%
    td
      height 30px
      border-bottom 1px solid #e1e1e1
      padding 5px
      &:nth-child(2)
        color #000
        position relative
        &:after
          content ''
          width 15px
          height 15px
          display block
          background url("../../image/person/content_list_right_icon@2x.png") no-repeat center
          position absolute
          right 0
          top 15px
        &.active:after
          content '完成'
          width 40px
          height 30px
          line-height 30px
          text-align center
          display block
          color orangered
          background transparent
          position absolute
          right 0
          top 5px
        input
          border none
          outline none
          width 100%

  .photo
    margin-top 5%
    width 100%
    height 85px
    display inline-block
    .photo1
      font-size 13px
      width 30%
      height 65px
      float left
      text-align center
      margin-right 5%
      border-radius 5px
      background blue
      &.photo2
        margin-right 0
      .tips
        background #878787
        width 100%
        height 65px
        border-radius 5px
      span
        display inline-block
        height 30px
        line-height 30px
.hidden
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  background rgba(0,0,0,0.4)
  display none
  z-index 1
.hid
  position fixed
  bottom 0
  left 0
  right 0
  z-index 2
  display none
  span
    display block
    width 100%
    height 30px
    line-height 30px
    text-align center
    background #ffffff
    padding 5px
    input
      position absolute
      opacity 0
    &.active
      color #eb642b
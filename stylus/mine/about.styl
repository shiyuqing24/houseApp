body
  margin 0
  padding 0
  background #efefef
  font-size 14px

header
  height 35px
  background #ffffff
  line-height 35px
  .icon-back
    position absolute
    top 2px
    left 5px
    display inline-block
    width 30px
    height 30px
    background url("../../image/person/nav_icon_back@2x.png") no-repeat center
    background-size 12px 18px
  .header_title
    display inline-block
    width 100%
    text-align center
    font-size 20px
.content
  height 110px
  padding 45px 0 60px 0
  .icon-logo
    width 75px
    height 75px
    display block
    background url("../../image/login/shi.png") no-repeat center
    background-size 75px 75px
    margin 0 auto
  .text
    display block
    width 120px
    height 40px
    line-height 40px
    margin 5px auto
    color #999
    .sun
      color #ea5404
      font-weight bold
      margin-right 15px
.list
  background #ffffff
  margin-top 10px
  height 30px
  line-height 30px
  padding 10px
  position relative
  &:after
    content ''
    width 20px
    height 15px
    display block
    background url("../../image/person/content_list_right_icon@2x.png") no-repeat center
    position absolute
    right 10px
    top 17px
  .phone
    position absolute
    right 40px
    color #999
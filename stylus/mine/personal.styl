body
  margin 0
  padding 0
  background #efefef
  font-size 14px
header
  height 35px
  background #ffffff
  line-height 35px
  margin-bottom 10px
  .header_title
    display inline-block
    width 100%
    text-align center
    color #5c5c5c
    font-size 16px
    font-weight  bold
  .icon-back
    position absolute
    top 2px
    right 5px
    display inline-block
    width 25px
    height 25px
    background  url("../../image/person/nav_set_icon@2x.png") no-repeat center
    background-size 16px 16px
.login
  width 100%
  height 130px
  background #ffffff
  .icon-back1
    width 64px
    height 64px
    background url('../../image/person/pic.jpg') no-repeat center
    background-size cover
    position absolute
    left 15px
    border-radius 50%
    display inline-block
    top 8%
    &:after
      content ''
      width 36px
      height 36px
      background url('../../image/person/log-in_member_icon@2x.png') no-repeat center
      background-size 18px
      position absolute
      left 40px
      top 35px



  .info
    line-height 30px
    padding 10px 90px
    .text
      display inline-block
      width 100%
      font-size 20px
      font-weight bold
    .info-text
      color #666
      font-weight 600
      font-size 12px
      &:after
        content ''
        background url("../../image/person/log-in_edit_icon@2x.png") no-repeat center
        background-size 14px 14px
        width 20px
        height 20px
        display block
        position absolute
        left 155px
        top 95px
    &:after
      content ''
      background url("../../image/person/log in_right_icon@2x.png") no-repeat center
      width 20px
      height 20px
      display block
      position absolute
      right 20px
      top 75px
  .box
    width 100%
    height 40px
    line-height 40px
    border-top 1px solid #d6d7dc
    div
      float left
      width 49%
      height 34px
      margin-top 3px
      text-align center
      padding 10px auto
      color #999
      &.s1
        border-right 1px solid #d6d7dc
      .count
        margin-right 10px
        font-size 16px
        color #000
        font-weight bold

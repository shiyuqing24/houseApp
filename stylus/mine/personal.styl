footer
  position fixed
  right 0
  left 0
  bottom 0
  background #fff
  ul
    list-style none
    padding 0
    li
      float left
      width 16%
      height 20px
      padding 2%
      color #999
      text-align center
      padding-top 30px
      &:hover
        color #ea5404
      &.f1
        background url("../../image/index/bottom_nor_icon04@2x.png") no-repeat center 0
        background-size 22px 22px
      &.f2
        background url("../../image/index/bottom_nor_icon03@2x.png") no-repeat center 0
        background-size 22px 22px
      &.f3
        background url("../../image/index/bottom_icon05@2x.png") no-repeat center 0
        background-size 44px 44px
      &.f4
        background url("../../image/index/bottom_nor_icon02@2x.png") no-repeat center 0
        background-size 22px 22px
        position relative
      &.f5
        background url("../../image/index/bottom_press_icon01@2x.png") no-repeat center 0
        background-size 22px 22px
        color #ea5404
.publish
  position fixed
  top 0
  bottom 0
  width 100%
  z-index 10
  display none
  background rgba(0,0,0,0.9)
  .con
    width 100%
    padding 0 16%
    position fixed
    bottom 110px
    height 120px
    .left,.right
      width 95px
      height 95px
      border-radius 50%
      float left
      background url("../../image/index/publish_btn022@2x.png") no-repeat center
      background-size 95px 95px
      position relative
      span
        display block
        width 95px
        text-align center
        position absolute
        bottom -25px
        color: #ffffff
      &.right
        background url("../../image/index/publish_btn011@2x.png") no-repeat center
        background-size 95px 95px
        margin-left 16%
  .bottom
    height 60px
    background url("../../image/index/publish_close_icon@2xx.png") no-repeat center #242221
    background-size 16px 16px
    position fixed
    bottom 0
    width 100%



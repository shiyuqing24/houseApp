$orange = #ED692B

*
  outline none
body
  background-color #efefef
  font-family SimHei
.header
  height 35px
  background-color #fff
  line-height 35px

  .icon-back
    position absolute
    top 0
    left 0
    display inline-block
    width 35px
    height 35px
    background url("../../image/login/nav_back_icon@2x.png") no-repeat center
    background-size 12px 18px
  .header_title
    display inline-block
    width 100%
    text-align center
.select_box
  padding 0px 20px
  margin-top 10px
  height 300px
  .box_1

    .box2_name

      width 95%
      height 40px
      border-radius 5px
      border 1px solid #D6D7DC
      padding 0px 10px
      font-size 0.9rem

  .box_2
    margin-top 10px
    .box2_name
      border none
      width 95%
      height 40px
      border-radius 5px
      border 1px solid #D6D7DC
      padding 0px 10px
      font-size 0.9rem
  .box_3
    margin-top 10px
    .box3_name
      width 100%
      height 40px
      border-radius 5px
      border 1px solid #D6D7DC
      padding 0px 10px
      font-size 1rem
      background-color #FFFFFF
      color $orange



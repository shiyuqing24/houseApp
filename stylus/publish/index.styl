body
  margin 0
  padding 0
  background #efefef
  font-size 14px
header
  height 30px
  padding 10px
  line-height 30px
  font-size 18px
  font-weight bold
  text-align center
  background #ffffff
article
  margin-top 10px
  position absolute
  top 60px
  bottom 72px
  width 100%
  overflow auto
  overflow-x hidden
  section
    padding 10px 3%
    height 105px
    background #ffffff
    position relative
    margin-bottom 10px
    .con
      height 72px
      .icon-back
        display block
        width 30%
        height 76px
        float left
        background url("../../image/index/content_img@2x.png") no-repeat center
        background-size 100px 76px
        margin-right 5%
      .info
        float left
        width 65%
        color #646464
        line-height 20px
        .title
          display block
          width 100%
          height 20px
          .tdate
            float right
            color #b4b4b4
            font-size 12px
        .text
          display block
          text-indent 1.2em
        .date
          color #ff8a00
          font-size 12px
    .del
      position absolute
      background #ff3b30
      color #ffffff
      right -18%
      top 0
      width 18%
      height 125px
      line-height 125px
      text-align center
      font-size 16px
    .status
      background #ea5404
      display block
      color #ffffff
      border-radius 5px
      width 55px
      height 22px
      line-height 22px
      text-align center
      float right
      &.active
        background #ffffff
        color #323232
        width 100px
        margin-right 5%
footer
  position fixed
  right 0
  left 0
  bottom 0
  background #fff
  ul
    list-style none
    padding 0
    li
      float left
      width 16%
      height 20px
      padding 2%
      color #999
      text-align center
      padding-top 30px
      &:hover
        color #ea5404
      &.f1
        background url("../../image/index/bottom_nor_icon04@2x.png") no-repeat center 0
        background-size 22px 22px
      &.f2
        background url("../../image/index/bottom_press_icon03@2x.png") no-repeat center 0
        background-size 22px 22px
        color #ea5404
      &.f3
        background url("../../image/index/bottom_icon05@2x.png") no-repeat center 0
        background-size 44px 44px
      &.f4
        background url("../../image/index/bottom_nor_icon02@2x.png") no-repeat center 0
        background-size 22px 22px
        position relative
      &.f5
        background url("../../image/index/bottom_nor_icon001@2x.png") no-repeat center 0
        background-size 22px 22px

.publish
  position fixed
  top 0
  bottom 0
  width 100%
  z-index 10
  display none
  background rgba(0,0,0,0.9)
  .con
    width 100%
    padding 0 16%
    position fixed
    bottom 110px
    height 120px
    .left,.right
      width 95px
      height 95px
      border-radius 50%
      float left
      background url("../../image/index/publish_btn022@2x.png") no-repeat center
      background-size 95px 95px
      position relative
      span
        display block
        width 95px
        text-align center
        position absolute
        bottom -25px
        color: #ffffff
      &.right
        background url("../../image/index/publish_btn011@2x.png") no-repeat center
        background-size 95px 95px
        margin-left 16%
  .bottom
    height 60px
    background url("../../image/index/publish_close_icon@2xx.png") no-repeat center #242221
    background-size 16px 16px
    position fixed
    bottom 0
    width 100%
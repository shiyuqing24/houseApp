$orange=#ed692b
*
  outline none/*outline-style 属性用于设置元素的整个轮廓的样式,none定义无轮廓*/
body
  margin 0
  padding 0
  background-color #EFEFEF
  font-family SimHei
.header
  height 35px
  background-color #fff
  line-height 35px
  .icon-back
    position absolute
    top 0
    left 10px
    display inline-block
    width 35px
    height 35px
    line-height 35px
    background-size 10px 16px
  .header-title
    text-align center
    display inline-block
    width 100%
  .icon_right
    position absolute
    right 10px
    top 0px
    color $orange
article
  padding 10px 8%
  input
    width 100%
    height 45px
    margin-bottom 10px
    text-indent 1em
    border 1px solid #d6d7dc
    border-radius 5px
  textarea
    width 98%
    line-height 30px
    text-indent 1em
    border-radius 5px

.hid
  display none
  position fixed
  top 0
  bottom 0
  width 100%
  background rgba(0,0,0,0.5)
  &.hid2
    background rgba(167,167,170,1)
  .box
    width 72%
    height 110px
    background #ffffff
    border-radius 10px
    position absolute
    left 14%
    top 50%
    margin-top -55px
    .text
      display inline-block
      width 100%
      height 66px
      line-height 66px
      text-align center
      border-bottom 1px solid #d6d7dc
    .btn
      color #ea5404
      height 40px
      line-height 40px
      width 48%
      border none
      outline none
      border-radius 5px 0 0 5px
      background-color #ffffff
    .btn1
      color #999
      border-right 1px solid #d6d6dc
    .confirm
      margin-left 26%
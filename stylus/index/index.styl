@import '../index/head.styl'
$orange =#EA5404
.header
  position absolute
  top 0px
  z-index 5
  width 100%
  color #ffffff
  background-color transparent
  .icon-back
    width 65px
    background transparent url("../../image/index/nav_icon_down@2x.png") no-repeat left 50px center
    background-size 10px 8px
    line-height 50px
    font-style normal
    padding-left 15px
  .header-title
    padding-right 80px
.search_box
  position absolute
  top 50px
  right 25px
  left 18px
  z-index 5
  .search_input
    height 30px
    background-color #f1f1f1
    border-radius 3px
    text-align center
    line-height 30px
    color #bbbbbb
    .icon-search
      width 30px
      height 30px
      background  url("../../image/index/nav_icon_search@2x.png") no-repeat center
      background-size 16px
      display inline-block
      vertical-align bottom
.slider_box
  width 100%
  height 320px
  overflow hidden
  .slider_container
    width 300%
    transition  all 0.5s
    transform  translateX(0)
    &:after
      content ''
      height 0px
      display block
      visibility hidden
      clear both
    .slider_block
      width 375px
      height 320px
      background url("../../image/index/banner_img@3x.png") no-repeat center
      background-size 100%
      &:nth-child(2)
        background url("../../image/index/banner_img@3x.png") no-repeat center
        background-size 100%
      &:nth-child(3)
        background url("../../image/index/banner_img@3x.png") no-repeat center
        background-size 100%
      &:nth-child(4)
        background url("../../image/index/banner_img@3x.png") no-repeat center
        background-size 100%
      &:nth-child(5)
        background url("../../image/index/banner_img@3x.png") no-repeat center
        background-size 100%
  .point_box
    height 16px
    position relative
    top -30px
    z-index 6
    text-align center
    .point_block
      display inline-block
      width 16px
      height 16px
      background url("../../image/index/banner_icon_point_nor@2x.png") no-repeat center
      background-size 10px
    &:active
      background url("../../image/index/banner_icon_point_press@2x.png") no-repeat center
      background-size 10px
.query_box
  width 100%
  height 50px
  margin-top 10px
  display flex
  background-color #ffffff
  .query_block
    flex 1
    &.active
      background-color #0000ed
    .text
      height 35px
      text-align center
      line-height 35px
      font-size 14px
      display block
    .icon
      height 15px
      background url("../../image/index/content_icon02_nor@2x.png") no-repeat center
      background-size 12px
      display block
      margin-top -10px
  .query_price
    width 50px
    height 50px
    background url("../../image/index/content_icon01_nor@2x.png") no-repeat center
    background-size 30px
    &.active-down
      background url("../../image/index/content_icon01_down@2x.png") no-repeat center
      background-size 30px
    &.active-up
      background url("../../image/index/content_icon01_litre@2x.png") no-repeat center
      background-size 30px
.block_box
  height 100px
  padding 15px
  background-color #FFFFFF
  margin-top 10px
  position relative
  .img_box
    width 256px
    height 180px
    background url("../../image/index/content_img_list@2x.png") no-repeat  left center
    background-size 128px 100px
    position absolute
    top -30px
  .info_box
    padding-left 150px
    position relative
    .info-title
      color #323232
      margin-bottom 3px
      .title_left
        font-size 18px
      &:after
        content ''
        width 28px
        height 26px
        background url("../../image/index/collect_icon_press@2x.png") no-repeat right  center
        background-size 14px 13px
        position absolute
        right 0px
        top -5px
    .info-address
      font-size 16px
      color #9f9f9f
      margin-bottom 3px
    .info-tag_box
      width 70px
      height 25px
      border 1px solid $orange
      border-radius 5px
      text-align center
      .t_b_t
        font-size 0.8rem
        color $orange
        text-align center
        line-height 25px
    .info-price
      font-size 14px
      margin-top 8px
      position relative
      .price_left
        color #9f9f9f
        em
          font-style normal
          color $orange
          padding-right 5px
      .price_right
        position absolute
        right -5px
        color #9f9f9f
        top 1px
.down-box
  display none
.bottom-list
  display flex
  width 100%
  height 20px
  background-color #ffffff
  .end_one
    flex 1
    width 42px
    height 42px
    background url("../../public/image/msg/bottom_nor_icon04@2x.pn") no-repeat center
    background-size 22px














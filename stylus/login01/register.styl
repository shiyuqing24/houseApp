body
  margin 0
  padding 0
  background #efefef
header
  height 35px
  background #ffffff
  line-height 35px
  .icon-back
    position absolute
    top 2px
    left 5px
    display inline-block
    width 30px
    height 30px
    background url("../../img/login/nav_back_icon@2x.png") no-repeat center
    background-size 12px 18px
  .header_title
    display inline-block
    width 100%
    text-align center
    color #ed692b
.form-list
  width 100%
  height 200px
  margin-top 5%
  background #fff
  .form-cell
    display flex
    height 40px
    line-height 40px
    position relative
    border-bottom 1px solid #efefef
    .form-cell-name
      display block
      width 70px
      padding-left 40px
      background url("../../image/login/content_ID_icon@2x.png") no-repeat 10px center
      background-size 18px 50%
      &.form-cell-mark
        background url("../../image/login/content_verify_icon@2x.png") no-repeat 10px center
        background-size 18px 50%
      &.form-cell-password
        background url("../../image/login/content_password_icon@2x.png") no-repeat 10px center
        background-size  18px 50%
      &.form-cell-sf
        background url("../../image/login/content_position_icon@2x.png") no-repeat 10px center
        background-size 18px 50%
    .btn_mark
      background #ed692b
      border none
      border-radius 5px
      color #ffffff
      font-size 12px
      height 30px
      margin 5px 0
      margin-right 12px
    .form-cell-input
      flex 1
      border none
      outline none
    #sf
      color #999
      width 90%
      margin-right 15px
      height 36px
      background url("../../img/index/content_icon02_nor@2x.png") right center no-repeat
      text-indent 1em
    .hid_sf
      display none
      color #ffffff
      background-color #a3a3a3
      width 75px
      height 155px
      text-align center
      border-radius 5px
      position absolute
      right 15px
      top 25px
      span
        display block
        height 30px
        line-height 30px
        border-bottom 1px solid #e6e6e6


.btn_box
  padding-left 3%
  .register
    padding 3% 0
    border none
    border-radius 5px
    width 96%
    color #ffffff
    background #c7c7c7
    margin-top 10%
    margin-bottom 5%
    &.active
      background #EA5404
  .btn-text
    display inline-block
    width 100%
    color #707071
    font-size 14px
    text-align center
    a
      color #ed692b








$orange=#EA5404

body
  margin 0px
  padding 0px
  background-color #B2B2B2
  position relative
  font-family SimHein
.middle
  width 70%
  position absolute
  top 80%
  background-color #FFFFFF
  left 50%
  transform: translate(-50%,-50%);
  margin-top 80%
  height 120px
  text-align center
  border-radius 5px
  .title
    padding 30px 0px
    font-size 16px
    position relative
  &:after
    content ''
    display block
    width 100%
    height 1px
    background-color  #CCCCCC
    position absolute
    left 0px
    top  60%
  .sure
    color $orange
    padding 10px 0





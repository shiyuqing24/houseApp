body
  margin 0
  padding 0
  box-sizing border-box
  background #efefef
header
  height 35px
  background #ffffff
  line-height 35px
  .icon-back
    position absolute
    top 2px
    left 5px
    display inline-block
    width 30px
    height 30px
    background url("../../image/login/nav_back_icon@2x.png") no-repeat center
    background-size 12px 18px
  .header_title
    display inline-block
    width 100%
    text-align center
    color #ed692b

.text
  display inline-block
  padding 10px 5px
  color #999
  width 100%
.content_box
  width 60%
  padding 5% 20%
  background #ffffff
  .photo
    width 90px
    height 90px
    margin 0 auto
    text-align center
    line-height 90px
    color: #ffffff
    background #878787
    border-radius 50%
    margin-bottom 10px
  input
    background #efeff4
    border none
    margin-bottom 5px
    padding 10px
    width 92%
    border-radius 5px
  .photo2
    width 80%
    height 65px
    margin-left 10%
    background #878787
    text-align center
    line-height 65px
    border-radius 5px
    margin-top 15px
.btn
  margin-top 20px
  width 100%
  height 40px
  color #ffffff
  background #ea5404
  border none
  border-radius 5px